<mvc:View controllerName="ui5.challenge.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    displayBlock="true"
    height="100%"
    busyIndicatorDelay="0">
    <Page id="mainTitleText"
        title="{i18n>mainTitleText}">
        <Button id="mainButton"
            text="{i18n>pressMe}"/>
        <Button id="myControl"
            press=".openDetailPage"/>
        <List>
            <items>
                <StandardListItem title="1"/>
                <StandardListItem title="2"/>
                <StandardListItem title="3"/>
            </items>
        </List>
    </Page>
</mvc:View>